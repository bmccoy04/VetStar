@model VetStar.Site.Models.LoginViewModel

<br>
<div class="row ">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default text-center">
            <div class="panel-heading">
                <h3>Login to Your Account</h1>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Index","Account", FormMethod.Post))
                {
                    @Html.TextBoxFor(m => m.UserName, new { maxlength = "50", placeholder="Username", @class="form-control", required="true" })
                    @Html.PasswordFor(m => m.Password, new { maxlength = "50", placeholder="Password", @class="form-control", required="true" })
                    <input type="submit" name="login" class="btn btn-lg btn-primary btn-block" value="Login">
                }
            </div>
        </div>
    </div>
</div>